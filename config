set $ws7 "7  Chrome"
set $ws7scut 7
set $ws8 "8  Chrome"
set $ws8scut 8
set $ws9 "9  Chrome"
set $ws9scut 9
set $ws10 "10  Chrome"
set $ws10scut 0

# switch to workspace
bindsym $sup+$ws1scut workspace $ws1
bindsym $sup+$ws2scut workspace $ws2
bindsym $sup+$ws3scut workspace $ws3
bindsym $sup+$ws4scut workspace $ws4
bindsym $sup+$ws5scut workspace $ws5
bindsym $sup+$ws6scut workspace $ws6
bindsym $sup+$ws7scut workspace $ws7
bindsym $sup+$ws8scut workspace $ws8
bindsym $sup+$ws9scut workspace $ws9
bindsym $sup+$ws10scut workspace $ws10

# move focused container to workspace
bindsym $sup+Shift+$ws1scut move container to workspace $ws1; workspace $ws1
bindsym $sup+Shift+$ws2scut move container to workspace $ws2; workspace $ws2
bindsym $sup+Shift+$ws3scut move container to workspace $ws3; workspace $ws3
bindsym $sup+Shift+$ws4scut move container to workspace $ws4; workspace $ws4
